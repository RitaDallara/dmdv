<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @slide.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw @slide.content %>
</p>

<p>
  <strong>Previous:</strong>
  <%= @slide.previous %>
</p>

<p>
  <strong>Next:</strong>
  <%= @slide.next %>
</p>

<p>
  <strong>Position:</strong>
  <%= @slide.position %>
</p>

<%= link_to 'Edit', edit_course_lesson_slide_path(@course,@lesson,@slide) %> |
<%= link_to 'Back', course_lesson_slides_path(@course,@lesson) %>

<% if not @slide.first? %>

  <%= link_to 'Previous', course_lesson_slide_path(@course,@lesson, @slide.higher_item) %>
  
<% end %>

<% if not @slide.last? %>

  <%= link_to 'Next', course_lesson_slide_path(@course,@lesson, @slide.lower_item) %>
  
<% end %>

<% if not @slide.root? %>

  <%= link_to 'Root', course_lesson_slide_path(@course,@lesson, @slide.parent) %>
  
<% end %>

<% if @slide.has_children? %>

  <%= link_to 'Extra', course_lesson_slide_path(@course,@lesson, @slide.children.first) %>
  
<% end %>

